{
  "command": {
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": [
        "*.test.*",
        "*.snap.*",
        "*-snap.*",
        "*.md",
        "*.config.*",
        "*.swift",
        "*.yml",
        "package.json",
        "tsconfig.json",
        "yarn.lock",
        ".editorconfig",
        ".eslintrc.js",
        "jest.setup.js",
        "renovate.json",
        "packages/natds-themes/build/**",
        "packages/natds-icons/src/**",
        "packages/natds-icons/android/**",
        "packages/natds-icons/ios/**",
        ".cicd/**",
        "scripts/**"
      ],
      "message": "chore(release): bump natds-common packages via lerna [skip ci]"
    }
  },
  "npmClient": "yarn",
  "packages": [
    "packages/natds-themes/*",
    "packages/natds-icons/*",
    "packages/natds-cli/*"
  ],
  "useWorkspaces": true,
  "version": "independent"
}
