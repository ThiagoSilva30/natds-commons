{
  "name": "@naturacosmeticos/natds-commons",
  "version": "0.0.0",
  "description": "A monorepo containing Natura Design System multiplataform packages",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "lerna run test",
    "test:watch": "jest --watch --collectCoverage",
    "lint": "lerna run lint",
    "commit": "git cz",
    "build": "lerna run build",
    "release": "lerna version --conventional-commits",
    "prerelease": "lerna version --conventional-commits --conventional-prerelease",
    "start": "lerna run start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/natura-cosmeticos/natds-commons.git"
  },
  "keywords": [
    "commons",
    "natds",
    "tokens",
    "themes",
    "icons"
  ],
  "author": "Natura Cosm√©ticos <designsystem@natura.net>",
  "contributors": [
    "Ariel Flor <arielwb@gmail.com>"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/natura-cosmeticos/natds-commons/issues"
  },
  "homepage": "https://github.com/natura-cosmeticos/natds-commons#readme",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.6",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@naturacosmeticos/eslint-config-natura": "^2.0.1",
    "commitizen": "^4.1.2",
    "cz-lerna-changelog": "^2.0.2",
    "eslint": "^7.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-mocha": "^7.0.0",
    "handlebars": "^4.7.6",
    "http-server": "^0.12.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-file-snapshot": "^0.3.8",
    "lerna": "^3.21.0",
    "style-dictionary": "^2.10.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "workspaces": [
    "packages/natds-themes"
  ]
}
